<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Material Design Bootstrap</title>
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    />
    <!-- Bootstrap core CSS -->
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    />
    <!-- Google Fonts -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    />
    <!-- Bootstrap core CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Material Design Bootstrap -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.0/css/mdb.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- Start your project here-->
    <div style="height: 100vh;">
      <div class="flex-center flex-column">
        <div class="center-text">
          <h1 class="h1-responsive text-center">
            Upload your CSV file containing GPS Co-ordinates
          </h1>
          <h5 class="h5-responsive text-center">
            Make sure to name it trajectory.csv or manually configure Node route
            file!
          </h5>
        </div>
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-4">
              <form
                action="/uploadCSV"
                method="POST"
                enctype="multipart/form-data"
                id="trajectoryForm"
              >
                <div class="input-group">
                  <div class="custom-file mt-4">
                    <input
                      type="file"
                      class="custom-file-input"
                      id="trajectory"
                      name="trajectory"
                      aria-describedby="trajectoryAddon01"
                    />
                    <label class="custom-file-label" for="trajectory"
                      >Choose file</label
                    >
                  </div>
                </div>
                <p href="#" id="fileStatus"></p>
                <button
                  class="btn btn-info btn-block my-4"
                  type="submit"
                  id="uploadFileButton"
                >
                  Upload Trajectory File
                </button>
                <input
                  type="text"
                  id="urlInput"
                  class="form-control mb-4"
                  placeholder="URL (fully qualified with port)"
                />
                <input
                  type="number"
                  id="intervalInput"
                  class="form-control mb-4"
                  placeholder="Interval in milliseconds"
                />
              </form>
              <div class="text-center">
                <span class="badge badge-danger ml-2"
                  >No trajectory started yet!</span
                ><br />
              </div>
              <div class="d-flex justify-content-center">
                <button class="btn btn-success" id="startTrajectoryButton">
                  Start Trajectory Simulation
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /Start your project here-->

    <!-- SCRIPTS -->
    <!-- JQuery -->
    <!-- JQuery -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
    ></script>
    <!-- Bootstrap tooltips -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"
    ></script>
    <!-- Bootstrap core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"
    ></script>
    <!-- MDB core JavaScript -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.0/js/mdb.min.js"
    ></script>
    <script type="text/javascript" src="scripts.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
  </body>
</html>
